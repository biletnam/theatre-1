{% extends 'base.html.twig' %}
{% block body %}
	<h2>Liste des évènements actifs</h2>
	{% for message in app.flashes('success') %}
	    <div class="alert alert-notice">
	        {{ message }}
	    </div>
	{% endfor %}
	<br>

	<table class="table">
		<thead class="thead-dark">
	    <tr>
	      <th scope="col">Date</th>
	      <th scope="col">Heure</th>

	      <th scope="col">Spectacle</th>
	      <th scope="col">Lieu</th>	      
	      <th scope="col">Commandes</th>
	    </tr>
		</thead>
		<tbody>

		{% for evenement in listEvent %}
			<tr>
			    <td>{{ evenement.date|date("d/m/Y") }}</td>
			    <td>{{ evenement.date|date("H:i") }}</td>
		    	<td>{{ evenement.nom }}</td>
			    <td>{{ evenement.lieu }} </td>	
                <td>
                    <a href="{{path('theatre_participate_event', {'userId': utilisateur.userId,'eventId': evenement.id }) }}" class="btn btn-warning">
                    	Participer
                	</a>
                </td>	    
	   		</tr>

		{% endfor %}

		</tbody>
	</table>

	<a href="{{path('theatre_homepageUser', {'id': utilisateur.userId})}}" class="btn btn-outline-danger">Retour</a>
{% endblock %}